#!/usr/bin/env bash

if [[ -z "${CHRUBY_VERSION}" ]]; then
	echo "CHRUBY_VERSION not defined, aborting..." >&2
	exit 3
fi

# Only run with Bash or Zsh
if [[ -n "${BASH}" -o -n "${ZSH_NAME}" ]]; then
	. /usr/local/share/chruby/chruby.sh
	. /usr/local/share/chruby/auto.sh
	chruby ${CHRUBY_VERSION}
fi

exec "$@"
