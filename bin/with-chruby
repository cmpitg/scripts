#!/usr/bin/env bash

if [[ -z "${RUBY_VERSION}" ]]; then
	echo "RUBY_VERSION not defined, aborting..." >&2
	exit 3
fi

# Only run with Bash or Zsh
if [[ -n "${BASH}" || -n "${ZSH_NAME}" ]]; then
	. /usr/local/share/chruby/chruby.sh
	. /usr/local/share/chruby/auto.sh
	chruby ${RUBY_VERSION}
fi

exec "$@"
