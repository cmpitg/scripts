#!/bin/bash

do-notify "Setting natural scrolling for Dell mouse"
xinput set-prop 'DELL Laser Mouse' 'libinput Natural Scrolling Enabled' 1
xinput set-prop 'DELL Laser Mouse' 'Evdev Scrolling Distance' -1, -1, 1
xinput set-prop 'DELL Laser Mouse' 'libinput Accel Speed' 0.2

do-notify "Setting natural scrolling for Evoluent Vertical 4"
xinput set-prop 'Kingsis Peripherals Evoluent VerticalMouse 4' 'libinput Natural Scrolling Enabled' 1
xinput set-prop 'Kingsis Peripherals Evoluent VerticalMouse 4' 'Evdev Scrolling Distance' -1, -1, 1

do-notify "Setting natural scrolling for Anker Vertical mouse"
xinput set-prop 'MOSART Semi. 2.4G Wireless Mouse' 'libinput Natural Scrolling Enabled' 1
xinput set-prop 'MOSART Semi. 2.4G Wireless Mouse' 'Evdev Scrolling Distance' -1, -1, 1
