# -*- mode: sh -*-

do_notify() {
    echo "$@"
    notify-send "$@"
}

do_notify_short() {
    echo "$@"
    notify-send -t 2000 "$@"
}

path_exists() {
    ls "$1" &>/dev/null
}

newline() {
    printf "\n"
}

is_local_port_open() {
    nc -z 127.0.0.1 "$1"
}

now() {
    echo "date +%Y-%m-%d_%H-%M-%S"
}
